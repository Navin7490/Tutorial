<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    tools:context="vision.madhvi.tutorial.Select_Paymen_Methode_Activity">
    <RelativeLayout
        android:id="@+id/Ralati_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Amoutpayble"
            android:text="Amount Payable â‚¹:"
            android:background="@color/white"
            android:textColor="@color/blue"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_amoutapayable"
            android:text="850"
            android:layout_marginLeft="@dimen/_135sdp"
            android:background="@color/white"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="left"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Ralati_2"
        android:layout_below="@+id/Ralati_1"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/Cardpaytm"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:background="@color/blue"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Im_Pay_Paytm"
                android:src="@drawable/patmbutton"
                android:background="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:background="@color/blue"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Im_Pay_Gpay"
                android:src="@drawable/gpay"
                android:background="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:background="@color/blue"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_190sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Im_Pay_Phone"
                android:src="@drawable/phonepay"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/Ralati_2"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:background="@color/blue"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Im_Pay_PayPaypal"
                android:src="@drawable/imagepaypal"
                android:background="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tv_Next"
            android:text="Next"
            android:background="@color/white"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_200sdp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_Confirm"
            android:text="Confirm Order"
            android:background="@color/white"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_200sdp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>