<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/my_course_item"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/Tablelayout"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/my_course_item">
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase ID :"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="OD14523678"
                    android:id="@+id/Tv_MyPurchaseCourseId"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"/>

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/my_course_item">
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Name :"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="10 th"
                    android:id="@+id/Tv_My_Purchasecourse"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <Button
                android:id="@+id/Btn_ViewMyOrder_course"
                android:text="View"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>