<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/Layout_Sigup"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:drawableLeft="@drawable/usericonn2"
            android:drawableTint="@color/blue"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Tv_Courseselect"
                android:text="select course"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/SpinnerCourse"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_40sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:spinnerMode="dialog"
                android:layout_height="@dimen/_20sdp"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/Layoutname"
            android:layout_marginTop="@dimen/_100sdp"
            android:textColorHint="@color/blue"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:id="@+id/Et_Name"
                android:hint="Enter Name"
                android:drawableTint="@color/blue"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:drawableLeft="@drawable/usericonn2"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/LayoutEmail"
            android:textColorHint="@color/blue"
            android:layout_below="@+id/Layoutname"
            android:layout_height="@dimen/_50sdp">
            <EditText

                android:id="@+id/Et_Email"
                android:hint="Enter Email"
                android:drawableTint="@color/blue"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/iconem"
                android:padding="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/LayoutMobile"
            android:layout_below="@+id/LayoutEmail"
            android:textColorHint="@color/blue"
            android:layout_height="@dimen/_50sdp">
            <EditText

                android:id="@+id/Et_Mobile"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Enter Mobile Number"
                android:padding="@dimen/_10sdp"
                android:maxLength="10"
                android:drawableTint="@color/blue"
                android:inputType="phone"
                android:drawablePadding="@dimen/_10sdp"
                android:textColorHint="@color/black"
                android:drawableLeft="@drawable/iconphone"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/SpinCourCate"
            android:spinnerMode="dropdown"
            android:background="@drawable/edit_text"
            android:layout_marginTop="@dimen/_5sdp"
            android:splitMotionEvents="true"
            android:layout_below="@+id/LayoutMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/LayouPassword"
            android:textColorHint="@color/blue"
            android:layout_below="@+id/SpinCourCate"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:id="@+id/Et_Password"
                android:hint="Enter Password"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColorHint="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/icpass"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/blue"
                android:inputType="textPassword"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:passwordToggleEnabled="true"
            android:id="@+id/LayouCpassword"
            android:hint="confirm Password"
            app:passwordToggleTint="@color/blue"
            android:textColorHint="@color/blue"
            android:layout_below="@+id/LayouPassword"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:id="@+id/Et_CPassword"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:drawableStart="@drawable/icpass"
                android:background="@drawable/edit_text"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/blue"
                android:drawablePadding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icpass" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Btn_SignUp"
            android:text="Sign Up"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/blue"
            android:background="@drawable/btn_signup"
            android:layout_margin="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_below="@+id/LayouCpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/Tv_gologin"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="@dimen/_10sdp"
        android:onClick="goforlogin"
        android:visibility="gone"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        android:text="Already register sign in here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>