<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Im_lessonItemdemo"
            android:layout_width="@dimen/_50sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/videoicon2"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/_50sdp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/Tv_VideoUrlDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_lessonItemDemodetail"
            android:layout_alignLeft="@+id/Im_lessonItemdemo"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="Basic Android for begginer"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>