<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vision.madhvi.tutorial.MyProfile_Fragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Im_Profile"
        android:src="@drawable/ic_user"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"/>
    <TextView
        android:id="@+id/Tv_ProfileName"
        android:gravity="center"
        android:text="Navin Solanki"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/Im_Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="7490967163"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/Tv_ProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>

</RelativeLayout>