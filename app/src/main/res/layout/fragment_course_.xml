<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Course_List_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Btn_coursegroup"
            android:text="All Courses"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/btn_signup"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/btn_signup"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:text="view demo video"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_8sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_GseleId"
            android:visibility="gone"
            android:layout_below="@+id/Btn_coursegroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_GseleName"
            android:text="Academic"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@+id/Btn_coursegroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/SP_Courese_group"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@+id/Tv_GseleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Rv_Home_Courses"
            android:visibility="visible"
            android:layout_below="@+id/SP_Courese_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>