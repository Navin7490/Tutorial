<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Img_PDImage"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_user"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_150sdp" />
        <TextView
            android:id="@+id/Tv_PDName"
            android:layout_below="@+id/Img_PDImage"
            android:text="Welcome Gamar Navinkumar"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Tv_PDProfileName"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_below="@+id/Tv_PDName"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Student"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Tv_PDUName"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_below="@+id/Tv_PDProfileName"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Navin@7490 ,Lastlogin :07/06/2020 :11:33:50"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Btn_PDProfile"
            android:text="Profile"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@+id/Tv_PDUName"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_signup"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/Btn_PDLogout"
            android:text="Logout"
            android:background="@drawable/btn_signup"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@+id/Tv_PDUName"
            android:layout_marginLeft="@dimen/_120sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>