<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Login_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Sign In"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_200sdp"
            android:textColorHint="@color/blue"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:id="@+id/Et_LEmail"
                android:hint="Enter Email"
                android:background="@drawable/edit_text"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/blue"
                android:drawablePadding="@dimen/_10sdp"
                android:textColorHint="@color/black"
                android:drawableLeft="@drawable/iconem"
                android:inputType="textEmailSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layout2"
            android:layout_below="@+id/Layout1"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="@color/blue"
            android:hint="Enter Password"
            app:passwordToggleTint="@color/blue"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:id="@+id/Et_LPassword"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/icpass"
                android:background="@drawable/edit_text"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/blue"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_below="@+id/Et_LEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icpass" />
        </com.google.android.material.textfield.TextInputLayout>
      <TextView
          android:id="@+id/Tv_Forgote_Password"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_below="@+id/Layout2"
          android:text="Forgot Password"
          android:textColor="@color/blue"
          android:layout_marginLeft="@dimen/_10sdp"
          android:textSize="@dimen/_14sdp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Btn_Login"
            android:layout_below="@+id/Layout2"
            android:text="Sign In"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/btn_signin"
            android:layout_margin="@dimen/_50sdp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/Tv_gorst"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:onClick="goforsignup"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="New user sign up here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>